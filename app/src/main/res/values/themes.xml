<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aphrodite" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_300</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_87</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white_secondary</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/teal_200</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/ic_launcher_foreground
        </item>
        <item name="android:buttonStyle">@style/Theme.Aphrodite.Button</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.Aphrodite.Logo" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/pink_300</item>
    </style>

    <style name="Theme.Aphrodite.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
    </style>

    <style name="Theme.Aphrodite.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>

    <style name="Theme.Aphrodite.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>

    <style name="Theme.Aphrodite.DrawerText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black_60</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.Aphrodite.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Aphrodite.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>